@model E_Speed.Models.Shipments.AllShipmentQueryModel

@{
    ViewData["Title"] = "Shipments";
}

<head>
    <style type="text/css">
        .btn-circle.btn-md {
            width: 50px;
            height: 50px;
            padding: 7px 10px;
            border-radius: 125px;
            font-size: 28px;
            text-align: center;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        }
    </style>
</head>

<section class="py-5">
    <div class="container">
        <div class="row" style="margin: 2%;">
            <div style="margin-left: 43%;">
                <h1>Shipments</h1>
            </div>
            <div class="col-md-1">
                <a href="/Shipments/Create" class="btn btn-outline-info btn-circle btn-md">+</a>
            </div>
        </div>
        <div style="padding: 5%;">

            <br />

            @if (Model.Shipments.Count() == 0)
            {
                <h5>There are no shipments. Would you like to <a href="/Shipments/Create">add</a> the first one?</h5>
            }
            else
            {
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" style="text-align:center;">Details</th>
                            <th scope="col" style="text-align:center;">Reference №</th>
                            <th scope="col" style="text-align:center;">Accounting Date</th>
                            <th scope="col" style="text-align:center;">System</th>
                            <th scope="col" style="text-align:center;">Created by</th>
                            <th scope="col" style="text-align:center;">Approved by</th>
                            <th scope="col" style="text-align:center;">Posting by</th>
                            <th scope="col" style="text-align:center;">Posting approved<br />by</th>
                            <th scope="col" style="text-align:center;">Posting number</th>
                            <th class="col-md-2" scope="col" style="text-align:center;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Shipments)
                        {
                            <tr>
                                <td>
                                    <div class="button-holder">
                                        <a href="/Shipments/Details?shipmentId=@s.Id" class="btn btn-info text-uppercase">View</a>
                                    </div>
                                </td>
                                <td scope="row" style="text-align:center;">@s.DateAccepted.ToShortDateString()</td>
                                <td style="text-align:center;">@s.Sender</td>
                                <td style="text-align:center;">@s.Receiver</td>
                                <td style="text-align:center;">@s.DeliveryToOffice</td>
                                <td style="text-align:center;">@s.DeliveryAddress</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>
